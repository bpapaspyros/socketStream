        {
            "type": "shell",
            "label": "cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "-I", "${env:CPP_DEPENDENCIES}\\rapidjson\\include",
                "-I", "${workspaceFolder}\\include",
                "-I", "${workspaceFolder}\\source",
                "/Zi",
                "/EHsc",
                "/Fe:",
                "${workspaceFolder}\\build\\testSocket.exe",
                "${workspaceFolder}\\source\\source.cpp",
                "${workspaceFolder}\\source\\socketStream.cpp",
                "${workspaceFolder}\\source\\md5.cpp"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
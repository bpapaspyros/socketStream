    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build jsonWrapper example on Linux",
            "command": "g++",
            "args": [
                "-g", "${workspaceFolder}/source/jsonWrapper_example.cpp",
                "${workspaceFolder}/source/jsonWrapper.cpp",
                "-o", "${workspaceFolder}//build/jsonWrapper_example.exe",
                "-O3",
                "-I", "${env:CPP_DEPENDENCIES}/rapidjson/include",
                "-I", "${workspaceFolder}/include",
                "-I", "${workspaceFolder}/source"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
